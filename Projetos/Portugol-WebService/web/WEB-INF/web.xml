<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>PortugolWebService</display-name>
  <listener>
    <listener-class>br.univali.portugol.webservice.Inicializador</listener-class>
  </listener>
  <filter>
  	<filter-name>FiltroAutenticacao</filter-name>
  	<filter-class>br.univali.portugol.webservice.filtros.FiltroAutenticacao</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>FiltroAutenticacao</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>RegistrarErro</servlet-name>
  	<servlet-class>br.univali.portugol.webservice.servlets.RegistrarErro</servlet-class>  	
  </servlet>
  <servlet-mapping>
  	<servlet-name>RegistrarErro</servlet-name>
  	<url-pattern>/erro/registrar</url-pattern>
  </servlet-mapping>
  <error-page>
  	<error-code>401</error-code>
  	<location>/erro.html</location>
  </error-page>
  <error-page>
  	<error-code>403</error-code>
  	<location>/erro.html</location>
  </error-page>  
  <error-page>
  	<error-code>404</error-code>
  	<location>/erro.html</location>
  </error-page> 
  <error-page>
  	<error-code>405</error-code>
  	<location>/erro.html</location>
  </error-page>
  <error-page>
  	<error-code>501</error-code>
  	<location>/erro.html</location>
  </error-page> 
</web-app>